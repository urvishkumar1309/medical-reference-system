@model LoginVm

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="col-md-6">
    <div class="ibox-content">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "m-t", id = "frm" }))
        {
            <blockquote style="border-left: 5px solid #1B7BB9">
                <h1 class="text-success"><strong>Welcome</strong></h1>
                <h3>Making Good Happen</h3>
            </blockquote>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    @Html.TextBoxFor(s => s.Aadhaar, new { placeholder = "Enter Aadhaar", @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    @Html.PasswordFor(s => s.Password, new { placeholder = "Enter Password", @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <select id="Role" name="Role" class="form-control">
                    <option value="Doctor"> Doctor</option>
                    <option value="Admin"> Admin</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success block full-width m-b">Login</button>

            <a href="@Url.Action("ForgotPassword")">
                <small>Forgot password?</small>
            </a>
            <p class="text-muted text-center">
                <small>Do not have an account?</small>
            </p>
            <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Registration")">Create an account</a>
            <br />
            <a class="btn btn-sm btn-danger btn-block" href="@Url.Action("Patient")">Check Patient History</a>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/plugins/validate")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#frm").validate({
                rules: {
                    Password: {
                        required: true
                    },
                    Aadhaar: {
                        required: true,
                        number: true,
                        minlength: 12,
                        maxlength: 12
                    }
                }
            });


        });
    </script>
}
