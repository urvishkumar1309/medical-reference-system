@model LoginVm

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="col-md-6">
    <div class="ibox-content">
        @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post, new { @class = "m-t", id = "frm" }))
        {
            <blockquote style="border-left: 5px solid #1B7BB9">
                <h1 class="text-success"><strong>Need Help?</strong></h1>
            </blockquote>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    @Html.TextBoxFor(s => s.Aadhaar, new { placeholder = "Enter Aadhaar", @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    @Html.TextBoxFor(s => s.Email, new { placeholder = "Enter Email Address", @class = "form-control" })
                </div>
            </div>


            <button type="submit" class="btn btn-success block full-width m-b">Submit</button>

            <a href="@Url.Action("Index")">
                <small>
                    <i class="fa fa-backward"></i> Return to Login?
                </small>
            </a>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/plugins/validate")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#frm").validate({
                rules: {
                    Email: {
                        required: true,
                        email: true
                    },
                    Aadhaar: {
                        required: true,
                        number: true,
                        minlength: 12,
                        maxlength: 12
                    }
                }
            });
        });
    </script>
}
